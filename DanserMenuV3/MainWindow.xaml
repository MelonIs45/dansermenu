<Window x:Class="DanserMenuV3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:fw="clr-namespace:SourceChord.FluentWPF;assembly=FluentWPF"
        xmlns:System="clr-namespace:System;assembly=mscorlib"

        mc:Ignorable="d"
        Title="DANSER Menu" Height="678" Width="800"
        ResizeMode="NoResize"
        fw:AcrylicWindow.Enabled="True"
        Closing="MainWindow_OnClosing">

    <Window.Resources>
        <Brush x:Key="TextColorLight">White</Brush>
    </Window.Resources>

    <Grid x:Name="maingrid" fw:PointerTracker.Enabled="True" Margin="0,0,0,-49">
        <Grid.Background>
            <ImageBrush Opacity="0.3" Stretch="UniformToFill" ImageSource="/bg.png"/>
        </Grid.Background>
        <TextBlock x:Name="LabelMSG" HorizontalAlignment="Left" Foreground="{StaticResource TextColorLight}" Margin="25,20,0,0" Text="DANSER Menu made with &lt;3 by Meloons#8078" TextWrapping="Wrap" VerticalAlignment="Top" Height="30" Width="387" FontSize="16"/>

        <TextBlock x:Name="LabelSFAM" Text="Search for a map:" Foreground="{StaticResource TextColorLight}" HorizontalAlignment="Left" Margin="25,55,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="TebSearch" Height="49" Margin="25,75,25,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="24" TextChanged="TebSearch_TextChanged" Style="{StaticResource TextBoxRevealStyle}"/>

        <Button Foreground="{StaticResource TextColorLight}" x:Name="BuRun" Content="" Margin="651,11,89,0" VerticalAlignment="Top" Height="60" FontSize="24" Click="BuRun_Click" Style="{StaticResource ButtonRevealStyle}" Opacity="0.5" FontFamily="Lucida Sans" Width="60">
            <Button.Background>
                <ImageBrush ImageSource="/start.png"/>
            </Button.Background>
        </Button>

        <TextBlock x:Name="LabelPAM" Text="Pick a map:" Foreground="{StaticResource TextColorLight}" HorizontalAlignment="Left" Margin="25,129,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="CobMaps" Margin="25,150,25,0" Padding="5,8,5,8" VerticalAlignment="Top" Height="44" FontSize="20" Style="{StaticResource ComboBoxRevealStyle}" SelectionChanged="CobMaps_SelectionChanged">
            <ComboBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <VirtualizingStackPanel VirtualizingStackPanel.IsVirtualizing="True" VirtualizingStackPanel.VirtualizationMode="Recycling" />
                </ItemsPanelTemplate>
            </ComboBox.ItemsPanel>
        </ComboBox>

        <TextBlock x:Name="LabelPAMD" Foreground="{StaticResource TextColorLight}" Text="Pick a mode:" HorizontalAlignment="Left" Margin="29,207,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="CobMode" HorizontalAlignment="Left" Height="36" Margin="25,232,0,0" VerticalAlignment="Top" Width="200" FontSize="20" SelectionChanged="CobMode_SelectionChanged" Style="{StaticResource ComboBoxRevealStyle}" SelectedIndex="0">
            <ComboBoxItem Content="Dance"/>
            <ComboBoxItem Content="Knockout"/>
            <ComboBoxItem Content="Play"/>
            <ComboBoxItem Content="Replay"/>
        </ComboBox>
        <Label x:Name="LabelRP" HorizontalContentAlignment="Right" Foreground="{StaticResource TextColorLight}" Content="Current Replay Path:" HorizontalAlignment="Left" Margin="236,232,0,0" VerticalAlignment="Top" Height="36" Width="161">
        </Label>

        <TextBox x:Name="TebCurReplay" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.CanContentScroll="True" Margin="415,232,25,0" Style="{StaticResource TextBoxRevealStyle}" VerticalAlignment="Top" Height="36" TextChanged="TebCurReplay_TextChanged"/>

        <CheckBox Foreground="{StaticResource TextColorLight}" x:Name="ChkRecord" Content="Record" HorizontalAlignment="Left" Margin="436,509,0,0" VerticalAlignment="Top" Checked="CebRecord_Checked" Unchecked="CebRecord_Unchecked" Width="150"/>

        <Label x:Name="LabelCUR" Foreground="{StaticResource TextColorLight}" Content="Cursors:" HorizontalAlignment="Left" Height="38" Margin="21,297,0,0" VerticalAlignment="Top" Width="84"/>
        <TextBox PreviewTextInput="NumberValidationTextBox" x:Name="CursorsTextBox" Text="{Binding Value, ElementName=CursorsScrollbar, StringFormat={}{0:#,#}, Mode=TwoWay}" Style="{StaticResource TextBoxRevealStyle}" MaxLength="11" VerticalContentAlignment="Center" FontSize="16" Margin="110,297,0,0" Width="78" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <ScrollBar x:Name="CursorsScrollbar" Orientation="Vertical" Minimum="1" Maximum="100" BorderBrush="{x:Null}" SmallChange="1" Height="32" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,-26,0,0" >
            <ScrollBar.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="1.05"/>
                    <SkewTransform/>
                    <RotateTransform Angle="180"/>
                    <TranslateTransform X="187" Y="357.5"/>
                </TransformGroup>
            </ScrollBar.RenderTransform>
        </ScrollBar>

        <Label x:Name="LabelTAG" Foreground="{StaticResource TextColorLight}" Content="Tag Cursors:" HorizontalAlignment="Left" Height="36" Margin="20,343,0,0" VerticalAlignment="Top" Width="85"/>
        <TextBox PreviewTextInput="NumberValidationTextBox" x:Name="TagCursorsTextBox" Text="{Binding Value, ElementName=TagCursorsScrollbar, StringFormat={}{0:#,#}, Mode=TwoWay}" Style="{StaticResource TextBoxRevealStyle}" MaxLength="11" VerticalContentAlignment="Center" FontSize="16" Height="36" Margin="110,343,0,0" Width="78" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <ScrollBar x:Name="TagCursorsScrollbar" Orientation="Vertical" Minimum="1" Maximum="100" BorderBrush="{x:Null}" SmallChange="1" Height="32" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,-26,0,0" >
            <ScrollBar.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="1.05"/>
                    <SkewTransform/>
                    <RotateTransform Angle="180"/>
                    <TranslateTransform X="187" Y="404"/>
                </TransformGroup>
            </ScrollBar.RenderTransform>
        </ScrollBar>

        <Label x:Name="LabelSPEED" HorizontalContentAlignment="Right" Foreground="{StaticResource TextColorLight}" Content="Speed:" HorizontalAlignment="Left" Height="35" Margin="193,297,0,0" VerticalAlignment="Top" Width="106"/>
        <TextBox PreviewTextInput="DecimalValidationTextBox" x:Name="SpeedTextBox" Text="{Binding Value, ElementName=SpeedScrollbar, StringFormat={}{0:#,#.0}, Mode=TwoWay}" Style="{StaticResource TextBoxRevealStyle}" MaxLength="11" VerticalContentAlignment="Center" FontSize="16" Margin="304,297,0,0" Width="78" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <ScrollBar x:Name="SpeedScrollbar" Orientation="Vertical" Minimum="0.1" Maximum="10" BorderBrush="{x:Null}" SmallChange="0.1" Height="32" HorizontalAlignment="Left" VerticalAlignment="Top" Value="1" Margin="24,-26,0,0" >
            <ScrollBar.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="1.05"/>
                    <SkewTransform/>
                    <RotateTransform Angle="180"/>
                    <TranslateTransform X="357" Y="357.5"/>
                </TransformGroup>
            </ScrollBar.RenderTransform>
        </ScrollBar>

        <Label x:Name="LabelPITCH" HorizontalContentAlignment="Right" Foreground="{StaticResource TextColorLight}" Content="Pitch:" HorizontalAlignment="Left" Height="35" Margin="193,343,0,0" VerticalAlignment="Top" Width="106"/>
        <TextBox PreviewTextInput="DecimalValidationTextBox" x:Name="PitchTextBox" Text="{Binding Value, ElementName=PitchScrollbar, StringFormat={}{0:#,#.0}, Mode=TwoWay}" Style="{StaticResource TextBoxRevealStyle}" MaxLength="2" VerticalContentAlignment="Center" FontSize="16" Margin="304,343,0,0" Width="78" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <ScrollBar x:Name="PitchScrollbar" Orientation="Vertical" Minimum="0.1" Maximum="10" BorderBrush="{x:Null}" SmallChange="0.1" Height="32" HorizontalAlignment="Left" VerticalAlignment="Top" Value="1" Margin="24,-26,0,0" >
            <ScrollBar.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="1.05"/>
                    <SkewTransform/>
                    <RotateTransform Angle="180"/>
                    <TranslateTransform X="357" Y="404"/>
                </TransformGroup>
            </ScrollBar.RenderTransform>
        </ScrollBar>

        <Label x:Name="LabelCFN" HorizontalContentAlignment="Right" Foreground="{StaticResource TextColorLight}" Content="Custom File Name:" HorizontalAlignment="Left" Height="26" Margin="415,552,0,0" VerticalAlignment="Top" Width="139"/>
        <TextBox x:Name="TebOutName" HorizontalAlignment="Left" Height="38" Margin="554,546,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="221" IsEnabled="False" Style="{StaticResource TextBoxRevealStyle}"/>
        <Label x:Name="LabelMOD" HorizontalContentAlignment="Right" Foreground="{StaticResource TextColorLight}" Content="Mods:" HorizontalAlignment="Left" Height="28" Margin="568,311,0,0" VerticalAlignment="Top" Width="85"/>
        <TextBox x:Name="TebMods" HorizontalAlignment="Right" Height="36" Margin="0,307,25,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="117" Style="{StaticResource TextBoxRevealStyle}" FontSize="16"/>
        <CheckBox Foreground="{StaticResource TextColorLight}" x:Name="ChkSkip" Content="Skip" HorizontalAlignment="Left" Margin="331,517,0,0" VerticalAlignment="Top" Width="125"/>
        <Label x:Name="LabelSKIN" Foreground="{StaticResource TextColorLight}" Content="Skin: " HorizontalAlignment="Left" Height="24" Margin="23,387,0,0" VerticalAlignment="Top" Width="42"/>
        <Button x:Name="BtnSkinBrowse" Foreground="{StaticResource TextColorLight}" Content="Browse" HorizontalAlignment="Left" Height="30" Margin="23,413,0,0" VerticalAlignment="Top" Width="66" Style="{StaticResource ButtonRevealStyle}" Click="BtnSkinBrowse_Click"/>
        <TextBox x:Name="TebSkinName" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.CanContentScroll="True" HorizontalAlignment="Left" Height="32" Margin="89,412,0,0" VerticalAlignment="Top" Width="293" Style="{StaticResource TextBoxRevealStyle}" TextChanged="TebSkinName_TextChanged"/>
        <CheckBox Foreground="{StaticResource TextColorLight}" x:Name="ChkDebug" Content="Debug" HorizontalAlignment="Left" Height="22" Margin="331,547,0,0" VerticalAlignment="Top" Width="164"/>
        <CheckBox HorizontalContentAlignment="Left" Foreground="{StaticResource TextColorLight}" x:Name="ChkScreenshot" Content="Screenshot Time:" HorizontalAlignment="Left" Height="21" Margin="595,449,0,0" VerticalAlignment="Top" Width="180" Checked="ChkScreenshot_Checked" Unchecked="ChkScreenshot_Unchecked"/>
        <TextBox PreviewTextInput="DecimalValidationTextBox" x:Name="ScreenshotTime" Text="0" Style="{StaticResource TextBoxRevealStyle}" VerticalContentAlignment="Center" FontSize="16" Margin="616,475,0,0" Width="78" HorizontalAlignment="Left" VerticalAlignment="Top" IsEnabled="False"/>
        <CheckBox Foreground="{StaticResource TextColorLight}" x:Name="ArCheckBox" Content="AR" HorizontalAlignment="Left" Height="16" Margin="23,527,0,0" VerticalAlignment="Top" Width="44"/>
        <CheckBox Foreground="{StaticResource TextColorLight}" x:Name="OdCheckBox" Content="OD" HorizontalAlignment="Left" Height="19" Margin="23,569,0,0" VerticalAlignment="Top" Width="50"/>

        <TextBox x:Name="ArTextBox" Text="{Binding Value, ElementName=ArScrollBar, Mode=TwoWay, StringFormat=\{0:#\,#.0\}}" Style="{StaticResource TextBoxRevealStyle}" MaxLength="11" VerticalContentAlignment="Center" FontSize="16" Height="36" Margin="70,516,0,0" Width="78" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <ScrollBar x:Name="ArScrollBar" Orientation="Vertical" Minimum="-100" Maximum="100" BorderBrush="{x:Null}" SmallChange="0.1" Value="9" Height="32" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="-40,146,0,0" >
            <ScrollBar.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="1.05"/>
                    <SkewTransform/>
                    <RotateTransform Angle="180"/>
                    <TranslateTransform X="187" Y="404"/>
                </TransformGroup>
            </ScrollBar.RenderTransform>
        </ScrollBar>

        <TextBox x:Name="OdTextBox" Text="{Binding Value, ElementName=OdScrollBar, Mode=TwoWay, StringFormat=\{0:#\,#.0\}}" Style="{StaticResource TextBoxRevealStyle}" MaxLength="11" VerticalContentAlignment="Center" FontSize="16" Height="36" Margin="71,560,0,0" Width="78" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <ScrollBar x:Name="OdScrollBar" Orientation="Vertical" Minimum="-10" Maximum="100" BorderBrush="{x:Null}" SmallChange="0.1" Value="6" Height="32" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="-39,191,0,0" >
            <ScrollBar.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="1.05"/>
                    <SkewTransform/>
                    <RotateTransform Angle="180"/>
                    <TranslateTransform X="187" Y="404"/>
                </TransformGroup>
            </ScrollBar.RenderTransform>
        </ScrollBar>

        <CheckBox Foreground="{StaticResource TextColorLight}" x:Name="CsCheckBox"  Content="CS" HorizontalAlignment="Left" Height="16" Margin="175,526,0,0" VerticalAlignment="Top" Width="62"/>
        <CheckBox Foreground="{StaticResource TextColorLight}" x:Name="HpCheckBox" Content="HP" HorizontalAlignment="Left" Height="19" Margin="175,568,0,0" VerticalAlignment="Top" Width="55"/>

        <TextBox x:Name="CsTextBox" Text="{Binding Value, ElementName=CsScrollBar, Mode=TwoWay, StringFormat=\{0:#\,#.0\}}" Style="{StaticResource TextBoxRevealStyle}" MaxLength="11" VerticalContentAlignment="Center" FontSize="16" Margin="237,514,0,0" Width="78" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <ScrollBar x:Name="CsScrollBar" Orientation="Vertical" Minimum="-10" Maximum="100" BorderBrush="{x:Null}" SmallChange="0.1" Height="32" HorizontalAlignment="Left" VerticalAlignment="Top" Value="3" Margin="-43,191,0,0" >
            <ScrollBar.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="1.05"/>
                    <SkewTransform/>
                    <RotateTransform Angle="180"/>
                    <TranslateTransform X="357" Y="357.5"/>
                </TransformGroup>
            </ScrollBar.RenderTransform>
        </ScrollBar>

        <TextBox x:Name="HpTextBox" Text="{Binding Value, ElementName=HpScrollBar, Mode=TwoWay, StringFormat=\{0:#\,#.0\}}" Style="{StaticResource TextBoxRevealStyle}" MaxLength="2" VerticalContentAlignment="Center" FontSize="16" Margin="237,560,0,0" Width="78" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <ScrollBar x:Name="HpScrollBar" Orientation="Vertical" Minimum="-10" Maximum="100" BorderBrush="{x:Null}" SmallChange="0.1" Height="32" HorizontalAlignment="Left" VerticalAlignment="Top" Value="3" Margin="-43,191,0,0" >
            <ScrollBar.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="1.05"/>
                    <SkewTransform/>
                    <RotateTransform Angle="180"/>
                    <TranslateTransform X="357" Y="404"/>
                </TransformGroup>
            </ScrollBar.RenderTransform>
        </ScrollBar>
        <Label x:Name="LabelCM" Foreground="{StaticResource TextColorLight}" Content="Custom Modifiers" HorizontalAlignment="Left" Height="30" Margin="20,478,0,0" VerticalAlignment="Top" Width="356"/>
        <CheckBox Foreground="{StaticResource TextColorLight}" x:Name="ChkNoDb" Content="No Database Check" HorizontalAlignment="Left" Height="14" Margin="436,449,0,0" VerticalAlignment="Top" Width="175"/>
        <CheckBox Foreground="{StaticResource TextColorLight}" x:Name="ChkQuickStart" Content="Quick Start" HorizontalAlignment="Left" Height="14" Margin="331,578,0,0" VerticalAlignment="Top" Width="164"/>

        <Slider x:Name="SliStartTime" HorizontalAlignment="Left" Height="23" Margin="415,360,0,0" VerticalAlignment="Top" Width="360" Value="0"/>
        <Label x:Name="LabelST" HorizontalContentAlignment="Right" Foreground="{StaticResource TextColorLight}" Content="Start Time:" HorizontalAlignment="Left" Height="25" Margin="387,325,0,0" VerticalAlignment="Top" Width="99"/>

        <Slider x:Name="SliEndTime" HorizontalAlignment="Left" Height="23" Margin="415,421,0,0" VerticalAlignment="Top" Width="360" Value="0"/>
        <Label x:Name="LabelET" HorizontalContentAlignment="Right" Foreground="{StaticResource TextColorLight}" Content="End Time:" HorizontalAlignment="Left" Height="25" Margin="343,386,0,0" VerticalAlignment="Top" Width="143"/>

        <TextBox PreviewTextInput="DecimalValidationTextBox" x:Name="StartTextBox" Text="{Binding Value, ElementName=SliStartTime, Mode=TwoWay, StringFormat=\{0:#\,#.0\}}" Style="{StaticResource TextBoxRevealStyle}" VerticalContentAlignment="Center" FontSize="16" Margin="485,321,0,0" Width="78" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBox PreviewTextInput="DecimalValidationTextBox" x:Name="EndTextBox" Text="{Binding Value, ElementName=SliEndTime, Mode=TwoWay, StringFormat=\{0:#\,#.0\}}" Style="{StaticResource TextBoxRevealStyle}" VerticalContentAlignment="Center" FontSize="16" Margin="485,381,0,0" Width="78" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Button x:Name="BtnUpdateDb" Foreground="{StaticResource TextColorLight}" Content="" Margin="580,12,160,0" VerticalAlignment="Top" Height="60" FontSize="24" Style="{StaticResource ButtonRevealStyle}" Opacity="0.5" FontFamily="Lucida Sans" Click="BtnUpdateDb_Click" Width="60">
            <Button.Background>
                <ImageBrush ImageSource="/update.png"/>
            </Button.Background>
        </Button>
        <Label x:Name="LabelCS" HorizontalContentAlignment="Right" Foreground="{StaticResource TextColorLight}" Content="Custom Settings:" HorizontalAlignment="Left" Height="26" Margin="413,598,0,0" VerticalAlignment="Top" Width="141"/>
        <Button x:Name="BtnSettingsBrowse" Foreground="{StaticResource TextColorLight}" Content="Browse" HorizontalAlignment="Left" Height="30" Margin="554,596,0,0" VerticalAlignment="Top" Width="66" Style="{StaticResource ButtonRevealStyle}" Click="BtnSettingsBrowse_Click"/>
        <TextBox x:Name="TebSettingsName" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.CanContentScroll="True" HorizontalAlignment="Left" Height="32" Margin="620,594,0,0" VerticalAlignment="Top" Width="155" Style="{StaticResource TextBoxRevealStyle}" TextChanged="TebSkinName_TextChanged"/>
        <CheckBox Foreground="{StaticResource TextColorLight}" x:Name="StyleCheckBox" Content="Old Style:" HorizontalAlignment="Left" Height="19" Margin="20,601,0,0" VerticalAlignment="Top" Width="111" Checked="StyleCheckBox_Checked" Visibility="Hidden"/>
        <CheckBox Foreground="{StaticResource TextColorLight}" x:Name="ChkNoUpdateCheck" Content="No Update Check" HorizontalAlignment="Left" Height="14" Margin="436,479,0,0" VerticalAlignment="Top" Width="175"/>
        <Button Foreground="{StaticResource TextColorLight}" x:Name="BuSettings" Content="" Margin="716,10,24,0" VerticalAlignment="Top" Height="60" FontSize="24" Style="{StaticResource ButtonRevealStyle}" Opacity="0.5" FontFamily="Lucida Sans" Click="BuSettings_Click">
            <Button.Background>
                <ImageBrush ImageSource="/settings.png"/>
            </Button.Background>
        </Button>

    </Grid>
</Window>                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                 