<Window x:Class="DanserMenuV3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:fw="clr-namespace:SourceChord.FluentWPF;assembly=FluentWPF"
        xmlns:System="clr-namespace:System;assembly=mscorlib"

        mc:Ignorable="d"
        Title="DANSER Menu" Height="678" Width="800"
        ResizeMode="NoResize"
        fw:AcrylicWindow.Enabled="True">

    <Window.Resources>
        <Brush x:Key="TextColorLight">White</Brush>
    </Window.Resources>

    <Grid fw:PointerTracker.Enabled="True" Margin="0,0,0,-49">
        <Grid.Background>
            <ImageBrush Opacity="0.3" Stretch="UniformToFill" ImageSource="/bg.png"/>
        </Grid.Background>
        <TextBlock x:Name="TebLabel" HorizontalAlignment="Left" Margin="25,20,0,0" Text="DANSER Menu made with &lt;3 by Meloons#8078" TextWrapping="Wrap" VerticalAlignment="Top" Height="31" Width="351" FontSize="16"/>

        <TextBlock Text="Search for a map:" HorizontalAlignment="Left" Margin="25,55,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="TebSearch" Height="49" Margin="25,75,25,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="24" TextChanged="TebSearch_TextChanged" Style="{StaticResource TextBoxRevealStyle}"/>

        <Button Foreground="{StaticResource TextColorLight}" x:Name="BuRun" Content="RUN" Margin="574,17,25,0" VerticalAlignment="Top" Height="34" FontSize="24" Click="BuRun_Click" Style="{StaticResource ButtonRevealStyle}" Opacity="0.5" FontFamily="Lucida Sans" Background="#FFA6A6A6"/>

        <TextBlock Text="Pick a map:" HorizontalAlignment="Left" Margin="25,129,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="CobMaps" Margin="25,150,25,0" Padding="5,8,5,8" VerticalAlignment="Top" Height="44" FontSize="20" Style="{StaticResource ComboBoxRevealStyle}" SelectionChanged="CobMaps_SelectionChanged">
            <ComboBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <VirtualizingStackPanel VirtualizingStackPanel.IsVirtualizing="True" VirtualizingStackPanel.VirtualizationMode="Recycling" />
                </ItemsPanelTemplate>
            </ComboBox.ItemsPanel>
        </ComboBox>

        <TextBlock Text="Pick a mode:" HorizontalAlignment="Left" Margin="29,207,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="CobMode" HorizontalAlignment="Left" Height="36" Margin="25,232,0,0" VerticalAlignment="Top" Width="200" FontSize="20" SelectionChanged="CobMode_SelectionChanged" Style="{StaticResource ComboBoxRevealStyle}" SelectedIndex="0">
            <ComboBoxItem Content="Dance"/>
            <ComboBoxItem Content="Knockout"/>
            <ComboBoxItem Content="Play"/>
            <ComboBoxItem Content="Replay"/>
        </ComboBox>
        <Label Foreground="{StaticResource TextColorLight}" Content="Current Replay Path:" HorizontalAlignment="Left" Margin="280,232,0,0" VerticalAlignment="Top" Height="36">
        </Label>

        <TextBox x:Name="TebCurReplay" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.CanContentScroll="True" Margin="415,232,25,0" Style="{StaticResource TextBoxRevealStyle}" VerticalAlignment="Top" Height="36" TextChanged="TebCurReplay_TextChanged"/>

        <CheckBox Foreground="{StaticResource TextColorLight}" x:Name="CebRecord" Content="Record" HorizontalAlignment="Left" Margin="438,513,0,0" VerticalAlignment="Top" Checked="CebRecord_Checked" Unchecked="CebRecord_Unchecked"/>

        <Label Foreground="{StaticResource TextColorLight}" Content="Cursors:" HorizontalAlignment="Left" Height="28" Margin="21,297,0,0" VerticalAlignment="Top" Width="76"/>
        <TextBox PreviewTextInput="NumberValidationTextBox" x:Name="CursorsTextBox" Text="{Binding Value, ElementName=CursorsScrollbar, StringFormat={}{0:#,#}, Mode=TwoWay}" Style="{StaticResource TextBoxRevealStyle}" MaxLength="11" VerticalContentAlignment="Center" FontSize="16" Margin="110,297,0,0" Width="78" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <ScrollBar x:Name="CursorsScrollbar" Orientation="Vertical" Minimum="1" Maximum="100" BorderBrush="{x:Null}" SmallChange="1" Height="32" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,-26,0,0" >
            <ScrollBar.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="1.05"/>
                    <SkewTransform/>
                    <RotateTransform Angle="180"/>
                    <TranslateTransform X="187" Y="357.5"/>
                </TransformGroup>
            </ScrollBar.RenderTransform>
        </ScrollBar>

        <Label Foreground="{StaticResource TextColorLight}" Content="Tag Cursors:" HorizontalAlignment="Left" Height="28" Margin="20,343,0,0" VerticalAlignment="Top" Width="76"/>
        <TextBox PreviewTextInput="NumberValidationTextBox" x:Name="TagCursorsTextBox" Text="{Binding Value, ElementName=TagCursorsScrollbar, StringFormat={}{0:#,#}, Mode=TwoWay}" Style="{StaticResource TextBoxRevealStyle}" MaxLength="11" VerticalContentAlignment="Center" FontSize="16" Height="36" Margin="110,343,0,0" Width="78" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <ScrollBar x:Name="TagCursorsScrollbar" Orientation="Vertical" Minimum="1" Maximum="100" BorderBrush="{x:Null}" SmallChange="1" Height="32" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,-26,0,0" >
            <ScrollBar.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="1.05"/>
                    <SkewTransform/>
                    <RotateTransform Angle="180"/>
                    <TranslateTransform X="187" Y="404"/>
                </TransformGroup>
            </ScrollBar.RenderTransform>
        </ScrollBar>

        <Label Foreground="{StaticResource TextColorLight}" Content="Speed:" HorizontalAlignment="Left" Height="28" Margin="220,297,0,0" VerticalAlignment="Top" Width="76"/>
        <TextBox PreviewTextInput="DecimalValidationTextBox" x:Name="SpeedTextBox" Text="{Binding Value, ElementName=SpeedScrollbar, StringFormat={}{0:#,#.0}, Mode=TwoWay}" Style="{StaticResource TextBoxRevealStyle}" MaxLength="11" VerticalContentAlignment="Center" FontSize="16" Margin="280,297,0,0" Width="78" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <ScrollBar x:Name="SpeedScrollbar" Orientation="Vertical" Minimum="0.1" Maximum="10" BorderBrush="{x:Null}" SmallChange="0.1" Height="32" HorizontalAlignment="Left" VerticalAlignment="Top" Value="1" Margin="0,-26,0,0" >
            <ScrollBar.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="1.05"/>
                    <SkewTransform/>
                    <RotateTransform Angle="180"/>
                    <TranslateTransform X="357" Y="357.5"/>
                </TransformGroup>
            </ScrollBar.RenderTransform>
        </ScrollBar>

        <Label Foreground="{StaticResource TextColorLight}" Content="Pitch:" HorizontalAlignment="Left" Height="28" Margin="220,343,0,0" VerticalAlignment="Top" Width="76"/>
        <TextBox PreviewTextInput="DecimalValidationTextBox" x:Name="PitchTextBox" Text="{Binding Value, ElementName=PitchScrollbar, StringFormat={}{0:#,#.0}, Mode=TwoWay}" Style="{StaticResource TextBoxRevealStyle}" MaxLength="2" VerticalContentAlignment="Center" FontSize="16" Margin="280,343,0,0" Width="78" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <ScrollBar x:Name="PitchScrollbar" Orientation="Vertical" Minimum="0.1" Maximum="10" BorderBrush="{x:Null}" SmallChange="0.1" Height="32" HorizontalAlignment="Left" VerticalAlignment="Top" Value="1" Margin="0,-26,0,0" >
            <ScrollBar.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="1.05"/>
                    <SkewTransform/>
                    <RotateTransform Angle="180"/>
                    <TranslateTransform X="357" Y="404"/>
                </TransformGroup>
            </ScrollBar.RenderTransform>
        </ScrollBar>

        <Label Foreground="{StaticResource TextColorLight}" Content="Custom File Name:" HorizontalAlignment="Left" Height="27" Margin="436,549,0,0" VerticalAlignment="Top" Width="118"/>
        <TextBox x:Name="TebOutName" HorizontalAlignment="Left" Height="37" Margin="554,544,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="221" IsEnabled="False" Style="{StaticResource TextBoxRevealStyle}"/>
        <Label Foreground="{StaticResource TextColorLight}" Content="Mods:" HorizontalAlignment="Left" Height="28" Margin="595,307,0,0" VerticalAlignment="Top" Width="76"/>
        <TextBox x:Name="TebMods" HorizontalAlignment="Right" Height="36" Margin="0,307,25,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="117" Style="{StaticResource TextBoxRevealStyle}" FontSize="16"/>
        <CheckBox Foreground="{StaticResource TextColorLight}" x:Name="ChkSkip" Content="Skip" HorizontalAlignment="Left" Margin="438,458,0,0" VerticalAlignment="Top"/>
        <Label Foreground="{StaticResource TextColorLight}" Content="Skin: " HorizontalAlignment="Left" Height="24" Margin="23,387,0,0" VerticalAlignment="Top" Width="42"/>
        <Button x:Name="BtnSkinBrowse" Foreground="{StaticResource TextColorLight}" Content="Browse" HorizontalAlignment="Left" Height="30" Margin="23,413,0,0" VerticalAlignment="Top" Width="66" Style="{StaticResource ButtonRevealStyle}" Click="BtnSkinBrowse_Click"/>
        <TextBox x:Name="TebSkinName" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.CanContentScroll="True" HorizontalAlignment="Left" Height="32" Margin="89,412,0,0" VerticalAlignment="Top" Width="293" Style="{StaticResource TextBoxRevealStyle}" TextChanged="TebSkinName_TextChanged"/>
        <CheckBox Foreground="{StaticResource TextColorLight}" x:Name="ChkDebug" Content="Debug" HorizontalAlignment="Left" Height="22" Margin="499,458,0,0" VerticalAlignment="Top" Width="80"/>
        <CheckBox Foreground="{StaticResource TextColorLight}" x:Name="ChkScreenshot" Content="Screenshot Time:" HorizontalAlignment="Left" Height="21" Margin="514,513,0,0" VerticalAlignment="Top" Width="119" Checked="ChkScreenshot_Checked" Unchecked="ChkScreenshot_Unchecked"/>
        <TextBox PreviewTextInput="DecimalValidationTextBox" x:Name="ScreenshotTime" Text="0" Style="{StaticResource TextBoxRevealStyle}" VerticalContentAlignment="Center" FontSize="16" Margin="652,503,0,0" Width="78" HorizontalAlignment="Left" VerticalAlignment="Top" IsEnabled="False"/>
        <CheckBox Foreground="{StaticResource TextColorLight}" x:Name="ArCheckBox" Content="Approach Rate:" HorizontalAlignment="Left" Height="16" Margin="21,525,0,0" VerticalAlignment="Top" Width="111"/>
        <CheckBox Foreground="{StaticResource TextColorLight}" x:Name="OdCheckBox" Content="Overall Difficulty:" HorizontalAlignment="Left" Height="19" Margin="21,567,0,0" VerticalAlignment="Top" Width="111"/>

        <TextBox x:Name="ArTextBox" Text="{Binding Value, ElementName=ArScrollBar, Mode=TwoWay, StringFormat=\{0:#\,#.0\}}" Style="{StaticResource TextBoxRevealStyle}" MaxLength="11" VerticalContentAlignment="Center" FontSize="16" Height="36" Margin="144,515,0,0" Width="78" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <ScrollBar x:Name="ArScrollBar" Orientation="Vertical" Minimum="-100" Maximum="100" BorderBrush="{x:Null}" SmallChange="0.1" Value="9" Height="32" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="34,145,0,0" >
            <ScrollBar.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="1.05"/>
                    <SkewTransform/>
                    <RotateTransform Angle="180"/>
                    <TranslateTransform X="187" Y="404"/>
                </TransformGroup>
            </ScrollBar.RenderTransform>
        </ScrollBar>

        <TextBox x:Name="OdTextBox" Text="{Binding Value, ElementName=OdScrollBar, Mode=TwoWay, StringFormat=\{0:#\,#.0\}}" Style="{StaticResource TextBoxRevealStyle}" MaxLength="11" VerticalContentAlignment="Center" FontSize="16" Height="36" Margin="145,559,0,0" Width="78" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <ScrollBar x:Name="OdScrollBar" Orientation="Vertical" Minimum="-10" Maximum="100" BorderBrush="{x:Null}" SmallChange="0.1" Value="6" Height="32" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="35,190,0,0" >
            <ScrollBar.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="1.05"/>
                    <SkewTransform/>
                    <RotateTransform Angle="180"/>
                    <TranslateTransform X="187" Y="404"/>
                </TransformGroup>
            </ScrollBar.RenderTransform>
        </ScrollBar>

        <CheckBox Foreground="{StaticResource TextColorLight}" x:Name="CsCheckBox"  Content="Circle Size:" HorizontalAlignment="Left" Height="16" Margin="237,525,0,0" VerticalAlignment="Top" Width="111"/>
        <CheckBox Foreground="{StaticResource TextColorLight}" x:Name="HpCheckBox" Content="HP Drain Rate:" HorizontalAlignment="Left" Height="19" Margin="237,567,0,0" VerticalAlignment="Top" Width="111"/>

        <TextBox x:Name="CsTextBox" Text="{Binding Value, ElementName=CsScrollBar, Mode=TwoWay, StringFormat=\{0:#\,#.0\}}" Style="{StaticResource TextBoxRevealStyle}" MaxLength="11" VerticalContentAlignment="Center" FontSize="16" Margin="343,513,0,0" Width="78" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <ScrollBar x:Name="CsScrollBar" Orientation="Vertical" Minimum="-10" Maximum="100" BorderBrush="{x:Null}" SmallChange="0.1" Height="32" HorizontalAlignment="Left" VerticalAlignment="Top" Value="3" Margin="63,190,0,0" >
            <ScrollBar.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="1.05"/>
                    <SkewTransform/>
                    <RotateTransform Angle="180"/>
                    <TranslateTransform X="357" Y="357.5"/>
                </TransformGroup>
            </ScrollBar.RenderTransform>
        </ScrollBar>

        <TextBox x:Name="HpTextBox" Text="{Binding Value, ElementName=HpScrollBar, Mode=TwoWay, StringFormat=\{0:#\,#.0\}}" Style="{StaticResource TextBoxRevealStyle}" MaxLength="2" VerticalContentAlignment="Center" FontSize="16" Margin="343,559,0,0" Width="78" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <ScrollBar x:Name="HpScrollBar" Orientation="Vertical" Minimum="-10" Maximum="100" BorderBrush="{x:Null}" SmallChange="0.1" Height="32" HorizontalAlignment="Left" VerticalAlignment="Top" Value="3" Margin="63,190,0,0" >
            <ScrollBar.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="1.05"/>
                    <SkewTransform/>
                    <RotateTransform Angle="180"/>
                    <TranslateTransform X="357" Y="404"/>
                </TransformGroup>
            </ScrollBar.RenderTransform>
        </ScrollBar>
        <Label Foreground="{StaticResource TextColorLight}" Content="Custom Modifiers (These are only enabled if you check the box)" HorizontalAlignment="Left" Height="30" Margin="20,478,0,0" VerticalAlignment="Top" Width="356"/>
        <CheckBox Foreground="{StaticResource TextColorLight}" x:Name="ChkNoDb" Content="No Database Check" HorizontalAlignment="Left" Height="14" Margin="566,459,0,0" VerticalAlignment="Top" Width="134"/>
        <CheckBox Foreground="{StaticResource TextColorLight}" x:Name="ChkQuickStart" Content="QuickStart" HorizontalAlignment="Left" Height="14" Margin="705,459,0,0" VerticalAlignment="Top" Width="81"/>

        <Slider x:Name="SliStartTime" HorizontalAlignment="Left" Height="23" Margin="415,360,0,0" VerticalAlignment="Top" Width="360" Value="0"/>
        <Label Foreground="{StaticResource TextColorLight}" Content="Start Time:" HorizontalAlignment="Left" Height="25" Margin="415,325,0,0" VerticalAlignment="Top" Width="71"/>

        <Slider x:Name="SliEndTime" HorizontalAlignment="Left" Height="23" Margin="415,421,0,0" VerticalAlignment="Top" Width="360" Value="0"/>
        <Label Foreground="{StaticResource TextColorLight}" Content="End Time:" HorizontalAlignment="Left" Height="25" Margin="415,386,0,0" VerticalAlignment="Top" Width="71"/>

        <TextBox PreviewTextInput="DecimalValidationTextBox" x:Name="StartTextBox" Text="{Binding Value, ElementName=SliStartTime, Mode=TwoWay, StringFormat=\{0:#\,#.0\}}" Style="{StaticResource TextBoxRevealStyle}" VerticalContentAlignment="Center" FontSize="16" Margin="485,321,0,0" Width="78" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBox PreviewTextInput="DecimalValidationTextBox" x:Name="EndTextBox" Text="{Binding Value, ElementName=SliEndTime, Mode=TwoWay, StringFormat=\{0:#\,#.0\}}" Style="{StaticResource TextBoxRevealStyle}" VerticalContentAlignment="Center" FontSize="16" Margin="485,381,0,0" Width="78" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Button x:Name="BtnUpdateDb" Foreground="{StaticResource TextColorLight}" Content="Update DB" Margin="397,17,246,0" VerticalAlignment="Top" Height="34" FontSize="24" Style="{StaticResource ButtonRevealStyle}" Opacity="0.5" FontFamily="Lucida Sans" Background="#FFA6A6A6" Click="BtnUpdateDb_Click"/>
        <Label Foreground="{StaticResource TextColorLight}" Content="Custom Settings:" HorizontalAlignment="Left" Height="27" Margin="436,595,0,0" VerticalAlignment="Top" Width="118"/>
        <Button x:Name="BtnSettingsBrowse" Foreground="{StaticResource TextColorLight}" Content="Browse" HorizontalAlignment="Left" Height="30" Margin="554,593,0,0" VerticalAlignment="Top" Width="66" Style="{StaticResource ButtonRevealStyle}" Click="BtnSettingsBrowse_Click"/>
        <TextBox x:Name="TebSettingsName" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.CanContentScroll="True" HorizontalAlignment="Left" Height="32" Margin="620,592,0,0" VerticalAlignment="Top" Width="155" Style="{StaticResource TextBoxRevealStyle}" TextChanged="TebSkinName_TextChanged"/>

    </Grid>
</Window>                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                 